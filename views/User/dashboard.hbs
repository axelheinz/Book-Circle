          {{/each}}
          {{!-- <img src="https://s2982.pcdn.co/wp-content/uploads/2014/08/HP_hc_new_1.jpeg"> --}}
        </div>
        {{/each}}

      </div>
    </div>   END HENDRICKS CODE --}}





</body>

<script src="/javascripts/script.js"></script>

</html>
<body>


  <div class="dashboard-body">
    <div id="db-left-side">
      <div id="user-profile-view">

        <h4><b>{{user.firstname}}</b></h4>
        <div id="profilepicture">
          <img height="100px" src={{user.picture}}>
        </div>

        <p>{{user.description}}</p>

        {{#unless user.firstname}}
        <p>Anonymous</p>
        {{/unless}}

        {{#unless user.description}}
        <p>I'm {{user.firstname}} and I love books.</p>
        {{/unless}}
      </div>
      <ul>
        <li><a href="/editprofile">Edit Profile</a></li>
        <li>Another thing</li>
        <li>Yet another thing</li>
        <li><a href="/logout">Logout</a></li>
      </ul>
    </div>

    <div id="db-middle">
      <div id="middle-top">
        <a href="/find-book"><button id="findbook-button">Find Books</button></a>
        <a href="/find-user"><button id="findbook-button">Find Users</button></a>
      </div>

      <div class="Reading-List">
        <span class="glyphicon glyphicon-heart"><h2>Reading List </h2></span>
        <h3>Books that I plan to read</h3>
        <div class="books-list">
          {{#each user.favorites}}
          <div class="book">
            <img src="{{this.picture}}">
            <h4>{{this.title}}</h4>
          </div>
          {{/each}}
        </div>
      </div>
      <div>
        <div class="Library-List">

          <span class="glyphicon glyphicon-bookmark"><h2>My Library </h2></span>
          <h3>Books that I have read</h3>

        <div class="books-list">
            {{#each user.library}}
            <div class="book">
              <h4>{{this.title}}</h4>
              <img src="{{this.picture}}">
            </div>
            {{/each}}
          </div>
        </div>
      </div>
    </div>

    <div id="db-right-side">
      <h2>What are your friends reading?</h2>
      <div id="friends-activity">
        <div class="friend">
          <h4>Axel is reading Harry Potter</h4>
          <img src="https://s2982.pcdn.co/wp-content/uploads/2014/08/HP_hc_new_1.jpeg">
        </div>
        <div class="friend">
          <h4>Sarah is reading Harry Potter</h4>
          <img src="https://s2982.pcdn.co/wp-content/uploads/2014/08/HP_hc_new_1.jpeg">
        </div>
        <div class="friend">
          <h4>Steph is reading Harry Potter</h4>
          <img src="https://s2982.pcdn.co/wp-content/uploads/2014/08/HP_hc_new_1.jpeg">
        </div>
      </div>

    </div>
  </div>





</body>

    <form action="/book-details/{{this.id}}/{{this.title}}?favorite=1" method="post">
      <button type="submit" class="btn btn-outline" id="save-book"><span class="glyphicon glyphicon-heart"></span>
        Like</button>
    </form>
    {{!-- Read Button --}}
    <form action="/book-details/{{this.id}}/{{this.title}}?read=1" method="post">

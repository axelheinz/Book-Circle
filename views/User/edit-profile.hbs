<body>

  <div class="dashboard-body">
    <div id="db-left-side">
      <div id="user-profile-view">
        <h4><b>{{user.firstname}}</b></h4>
        <p>{{user.description}}</p>

        {{#unless user.firstname}}
        <h4>I'm Anonymous.</h4>
        {{/unless}}
        {{#unless user.description}}
        <p>I'm {{user.firstname}} and I love books.</p>
        {{/unless}}
      </div>
      <ul>
        <li>Edit Profile</li>
        <li>Another thing</li>
        <li>Yet another thing</li>
      </ul>
    </div>
    <div id="db-middle">
      <h2><b>Edit My Profile</b></h2>
      <div id="form-edit-profile">
        <form action="/editprofile" method="POST">
          <label>First name:</label>
          <input id="edit-first-name" name="firstname" type="text" size="36">
          <br>
          <label>Last name:</label>
          <input id="edit-last-name" name="lastname" type="text" size="36">
          <br>
          <label>A little bit about yourself:</label>
          <textarea id="edit-description" type="text" name="description" cols="35" rows="4"></textarea>
          <br>
          <button input type="submit">Edit profile</button>
        </form>
      </div>
    </div>



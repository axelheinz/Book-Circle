<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="/stylesheets/user_style.css" />

  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.3/css/bootstrap.min.css" integrity="sha384-Zug+QiDoJOrZ5t4lssLdxGhVrurbmBWopoEl+M6BdEfwnCJZtKxi1KgxUyJq13dy"
    crossorigin="anonymous">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css">
</head>

<div class="search-container">
  <form class=" form-control-lg" action="/find-user" method="GET">
    <title for="">Find other users</title><br>
    <div class="input-group input-group-lg ">
      <div class="input-group-prepend input-group-lg">

        <input class="form-control" id="form" type="text" name="user" placeholder="Sarah, Steph, Axel ...?">
        <button id="searchBtn" class="btn btn-outline-success btn-lg" type="submit">SEARCH</button>
      </div>
    </div>
  </form>
</div>
<hr>


{{#each userResults}}

<div class="results-container">
  <div id="userpicture">
    <a> <img height=170px  class="item2" src="{{this.picture}}" alt={{this.firstname}} {{this.lastname}}> </a>
  </div>
  <div>
    {{#if this.firstname}}
    <p class="result-title">{{this.firstname}} {{this.lastname}}</p>
    <a class="result-subtitle">About me:</a>
    <br>
    <a class="result-subtitle">{{this.description}}</a>
    <br><br>
    <a class="btn btn-outline-secondary" href="/user-details/{{this._id}}">Check details of
      {{this.firstname}}</a>
    <hr>
    {{/if}}
  </div>


</div>

{{/each}}




<script src="/javascripts/script.js"></script>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>